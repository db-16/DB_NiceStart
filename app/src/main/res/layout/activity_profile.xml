<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@color/azul_marino">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/chica"
        android:scaleType="fitStart"
        app:layout_constraintTop_toTopOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laura"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/chica"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Martinez"
        android:textSize="34sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Soy una chica curiosa y amante del arte, siempre en busca de nuevas aventuras. Disfruto de la lectura y explorar culturas distintas. Valoro los pequeÃ±os momentos y el aprendizaje constante."
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"/>
    <TextView
        android:id="@+id/textViewContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="laura.martinez@gmail.com"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationViewYt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/youtube"
        android:layout_marginRight="50dp"
        app:layout_constraintEnd_toEndOf="@id/animationViewGh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewContact"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationViewGh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/github"
        app:layout_constraintEnd_toEndOf="@id/animationViewMail"
        app:layout_constraintStart_toStartOf="@id/animationViewYt"
        app:layout_constraintTop_toTopOf="@id/textViewContact"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationViewMail"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/mail"
        android:layout_marginLeft="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/animationViewGh"
        app:layout_constraintTop_toTopOf="@id/textViewContact"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>